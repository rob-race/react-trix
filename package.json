    "editable",
    "wysiwyg",
    "trix",
    "editor",
    "trix-editor"
  ],
  "author": {
    "name": "Dominic St-Pierre",
    "email": "dominic@roadmap.space"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dstpierre/react-trix/issues"
  },
  "homepage": "https://github.com/dstpierre/react-trix",
  "dependencies": {
    "trix": "^0.10.1"
  },
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/enzyme": "^2.7.6",
    "@types/mocha": "^2.2.40",
    "@types/react": "^15.0.18",
